<div class="lb-swiper-boxes">
  <div class="lb-swiper-boxes-holder">
    {% for block in section.blocks %}
      <a href="{{ block.settings.url }}" style="background-image: url({{ block.settings.image | img_url: '500x' }});">
        <span>{{ block.settings.heading }}</span>
      </a>
    {% endfor %}
  </div>
</div>

<style>

  .lb-swiper-boxes {
    margin-top: -50px;
    padding: 0px 0px 18px 0px !important;
    background: {{ section.settings.background-color }} !important;
    display: none;
  }

@media only screen and (max-width: 600px) {
  .lb-swiper-boxes {
    margin-top: -30px;
  }
}

  @media only screen and (max-width: {{ section.settings.max-show }}px) {
    .lb-swiper-boxes {
      display: block !important;
    }
  }

  .lb-swiper-boxes-holder {
    max-width: 100% !important;
    margin: auto !important;
    text-align: center !important;
    overflow: auto !important;
    white-space: nowrap !important;
    -ms-overflow-style: none !important;  /* IE and Edge */
    scrollbar-width: none !important;  /* Firefox */
  }

  /* Hide scrollbar for Chrome, Safari and Opera */
  .lb-swiper-boxes-holder::-webkit-scrollbar {
    display: none !important;
  }

  .lb-swiper-boxes a:first-child  {
    margin-left: 9px !important;
  }

  .lb-swiper-boxes a {
    max-width: 205px !important;
    width: 100% !important;
    aspect-ratio: 16 / 9 !important;
    border-radius: 9px !important;
    display: inline-block !important;
    margin-right: 9px !important;
    text-decoration: none !important;
    background-size: cover !important;
    background-position: center center !important;
    position: relative !important;
    overflow: hidden !important;
  }
  
  .lb-swiper-boxes a:after {
    content: " " !important;
    background: black !important;
    opacity: 0.2 !important;
    width: 100% !important;
    position: absolute !important;
    top: 0px !important;
    left: 0px !important;
    height: 100% !important;
  }

  @media only screen and (max-width: 600px) {
   .lb-swiper-boxes a {
      width: 43% !important;
      margin-right: 5px !important;
      aspect-ratio: 16 / 10 !important;
    }
  }

  .lb-swiper-boxes a span {
    color: white !important;
    font-size: 20px !important;
    line-height: 26px !important;
    z-index: 10 !important;
    position: absolute !important;
    top: 50% !important;
    width: 100% !important;
    display: block !important;
    padding: 0px 18px !important;
    left: 50% !important;
    transform: translate(-50%,-50%) !important;
    margin: auto !important;
    text-wrap: initial!important;
    font-weight: 600 !important;
    white-space: normal!important;
  }

  @media only screen and (max-width: 600px) {
  .lb-swiper-boxes a span {
    color: white !important;
    font-size: 14px !important;
    line-height: 20px !important;
  }
  }
   
</style>

